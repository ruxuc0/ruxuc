---
import '../../styles/global.css';

export async function getStaticPaths() {
  const posts = await Astro.glob('../../content/posts/*.mdx');
  return posts.map((post) => ({
    params: { 
      slug: post.file.split('/').pop()?.replace('.mdx', '') 
    },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{post.frontmatter.title} - ruxuc</title>
  </head>
  <body>
    <div class="max-w-2xl mx-auto px-6 py-12">
      <nav class="mb-8">
        <a href="/" class="text-blue-600 hover:text-blue-800 text-sm transition-colors">
          ← back to posts
        </a>
      </nav>
      
      <article>
        <header class="mb-8">
          <h1 class="text-3xl font-light text-gray-900 mb-3">
            {post.frontmatter.title}
          </h1>
          <div class="flex items-center gap-4 text-sm text-gray-500">
            <time class="font-mono">
              {new Date(post.frontmatter.created_at).toISOString().split('T')[0]}
            </time>
            {post.frontmatter.description && (
              <span>• {post.frontmatter.description}</span>
            )}
          </div>
        </header>

        <div class="prose">
          <post.Content />
        </div>
      </article>

      <footer class="mt-16 pt-8 border-t border-gray-100">
        <div class="text-center">
          <a href="/" class="text-blue-600 hover:text-blue-800 text-sm transition-colors">
            ← back to posts
          </a>
        </div>
      </footer>
    </div>
  </body>
</html>
