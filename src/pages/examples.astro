---
import '../styles/global.css';

const examples = await Astro.glob('../content/examples/*.mdx');
const sortedExamples = examples.sort((a, b) => 
  a.frontmatter.title.localeCompare(b.frontmatter.title)
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>examples - ruxuc</title>
  </head>
  <body>
    <div class="max-w-2xl mx-auto px-6 py-12">
      <nav class="mb-8">
        <a href="/" class="text-blue-600 hover:text-blue-800 text-sm transition-colors">
          ← back to posts
        </a>
      </nav>
      
      <header class="mb-12">
        <h1 class="text-3xl font-light text-gray-900 mb-2">examples</h1>
        <p class="text-gray-600 text-lg">mdx and component examples for reference.</p>
      </header>

      <main>
        <section class="space-y-8">
          {sortedExamples.map((example) => (
            <article class="border-b border-gray-100 pb-8 last:border-b-0">
              <div class="flex items-baseline justify-between mb-3">
                <h2 class="text-xl font-medium">
                  <a href={"/examples/" + example.file.split("/").pop()?.replace(".mdx", "")} 
                     class="text-gray-900 hover:text-blue-600 no-underline transition-colors">
                    {example.frontmatter.title}
                  </a>
                </h2>
                <time class="text-sm text-gray-500 font-mono">
                  {new Date(example.frontmatter.created_at).toISOString().split("T")[0]}
                </time>
              </div>
              {example.frontmatter.description && (
                <p class="text-gray-600 mb-0">
                  {example.frontmatter.description}
                </p>
              )}
            </article>
          ))}
        </section>
      </main>

      <footer class="mt-16 pt-8 border-t border-gray-100">
        <div class="text-center">
          <a href="/" class="text-blue-600 hover:text-blue-800 text-sm transition-colors">
            ← back to posts
          </a>
        </div>
      </footer>
    </div>
  </body>
</html>
